@model IEnumerable<ChallengerAgroCare.Models.User>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
 
        <a class="btn btn-primary" asp-controller="User" asp-action="Cadastrar">
            <i class="fas fa-user-plus"></i> Adicionar novo usuário
        </a>
    </div>
</div>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Procurar amigos</h1>

        <table class="table table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Avatar</th>
                    <th scope="col">Postagens</th>
                    <th scope="col">Comentários</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => user.Name)</td>
                        <td><img src="@user.Avatar" alt="Avatar" style="width:50px; height:auto;"></td>
                        <td>@user.Postagens</td>
                        <td>@user.Comentarios</td> 
                        <td>
                            <a role="button" class="btn btn-primary btn-sm m-1" asp-route-id="@user.Id" asp-controller="User" asp-action="Editar">Editar</a>
                            <a role="button" class="btn btn-danger btn-sm m-1" asp-route-id="@user.Id" asp-action="Delete">Apagar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
