@model IEnumerable<ChallengerAgroCare.Models.Postagem>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Post</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Postagens</h1>

        <table class="table table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Texto</th>
                    <th scope="col">Usuário</th>
                    <th scope="col">Comentários</th>
                    <th scope="col">Likes</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var postagem in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => postagem.TxtPost)</td>
                        <td>@Html.DisplayFor(modelItem => postagem.UserId)</td>
                        <td>@Html.DisplayFor(modelItem => postagem.Comentarios.Count)</td>
                        <td>@Html.DisplayFor(modelItem => postagem.Like)</td>
                        <td>
                            <a role="button" class="btn btn-primary btn-sm m-1" asp-route-id="@postagem.Id" asp-controller="Postagem" asp-action="Editar">Editar</a>
                            <a role="button" class="btn btn-danger btn-sm m-1" asp-route-id="@postagem.Id" asp-action="Delete">Apagar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <a class="btn btn-success" asp-controller="Postagem" asp-action="Cadastrar">Adicionar nova postagem</a>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
